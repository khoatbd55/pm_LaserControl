<UserControl x:Class="LaserCali.UIs.UCs.DeviceConnectionUC"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:LaserCali.UIs.UCs"
             mc:Ignorable="d"
             xmlns:fa5="http://schemas.fontawesome.com/icons/"
             >
    <Grid>
        <StackPanel Orientation="Horizontal" MaxHeight="25" >
            <TextBlock VerticalAlignment="Center" Margin="0,0,10,0">Connection Status:</TextBlock>
            <fa5:SvgAwesome x:Name="iconCamera" Margin="0,0,5,0" Icon="Solid_Circle" VerticalAlignment="Center" Foreground="#FF858484"/>
            <TextBlock VerticalAlignment="Center" Margin="0,0,15,0">Camera</TextBlock>
            <fa5:SvgAwesome x:Name="iconLaser" Margin="0,0,5,0" Icon="Solid_Circle" Foreground="#FF858484"/>
            <TextBlock VerticalAlignment="Center" Margin="0,0,15,0">Laser</TextBlock>
            <fa5:SvgAwesome x:Name="iconTemperature" Margin="0,0,5,0" Icon="Solid_Circle" Foreground="#FF858484"/>
            <TextBlock VerticalAlignment="Center" Margin="0,0,15,0">Temperature</TextBlock>
            <fa5:SvgAwesome x:Name="iconEnviroment" Margin="0,0,5,0" Icon="Solid_Circle" Foreground="#FF858484"/>
            <TextBlock VerticalAlignment="Center" Margin="0,0,15,0">Enviroment</TextBlock>
        </StackPanel>
    </Grid>
</UserControl>
