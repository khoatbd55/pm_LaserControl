<dx:ThemedWindow x:Class="LaserCali.UIs.Windowns.Common.WindowCommonSetting" 
    mc:Ignorable="d" Title="Common Setting" Height="500" Width="400"
    xmlns:dx="http://schemas.devexpress.com/winfx/2008/xaml/core"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    WindowStartupLocation="CenterScreen"
    xmlns:local="clr-namespace:LaserCali.UIs.Windowns.Common" 
    xmlns:dxlc="http://schemas.devexpress.com/winfx/2008/xaml/layoutcontrol" 
    xmlns:dxe="http://schemas.devexpress.com/winfx/2008/xaml/editors" 
    xmlns:dxg="http://schemas.devexpress.com/winfx/2008/xaml/grid" Icon="/Images/logo.ico">
    <dx:ThemedWindow.Resources>
        <Style TargetType="TextBlock" x:Key="labelTitle">
            <Setter Property="FontFamily" Value="Times New Roman"></Setter>
            <Setter Property="FontSize" Value="14"></Setter>
            <Setter Property="VerticalAlignment" Value="Center"></Setter>
            
        </Style>
    </dx:ThemedWindow.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"></RowDefinition>
            <RowDefinition Height="Auto"></RowDefinition>
        </Grid.RowDefinitions>
        <dx:DXTabControl Grid.Row="0" Padding="3,3,3,3" Margin="5,5,5,5">
            <dx:DXTabItem Header="Device" >
                <Grid Margin="0,10,0,0">
                   
                    <Grid Grid.Row="0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="100" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                        </Grid.RowDefinitions>
                        <Grid Grid.Row="0" Grid.Column="0" Margin="0,0,0,10" >
                            <TextBlock Style="{StaticResource labelTitle}"  Text="Enviroment Host:" TextWrapping="Wrap"/>
                        </Grid>
                        <Grid Grid.Row="0"  Margin="0,0,0,10" Grid.Column="1">
                            <dxe:TextEdit VerticalAlignment="Center" x:Name="txtEnvHost" Height="30" FontSize="14" EditValue="192.168.144.201" FontFamily="Times New Roman"  />
                        </Grid>
                        <Grid Grid.Row="1" Grid.Column="0" Margin="0,0,0,10">
                            <TextBlock Style="{StaticResource labelTitle}" Text="Port:"/>
                        </Grid>
                        <Grid Grid.Row="1" Grid.Column="1" Margin="0,0,0,10">
                            <dxe:SpinEdit FontFamily="Times New Roman" FontSize="14" Height="30" HorizontalContentAlignment="Left" Increment="1" Value="502" Mask="D0" x:Name="nudEnvPort" Width="100" MinValue="0" MaxHeight="65535" HorizontalAlignment="Left"/>
                        </Grid>
                        <Grid Grid.Row="2" Grid.Column="0" Margin="0,0,0,10">
                            <TextBlock Style="{StaticResource labelTitle}" Text="Temperature:"/>
                        </Grid>
                        <Grid Grid.Row="2" Grid.Column="1" Margin="0,0,0,10">
                            <dxe:ComboBoxEdit FontSize="14" FontFamily="Times New Roman" HorizontalContentAlignment="Left" x:Name="cboTemperature" Height="30" />
                        </Grid>
                        <Grid Grid.Row="3" Grid.Column="0">
                            <TextBlock Style="{StaticResource labelTitle}" TextWrapping="Wrap" Text="Temperature Host:"/>
                        </Grid>
                        <Grid Grid.Row="3" Grid.Column="1">
                            <dxe:TextEdit x:Name="txtMqttHost" FontSize="14" EditValue="192.168.144.108" FontFamily="Times New Roman"  />
                        </Grid>


                    </Grid>
                </Grid>
                
            </dx:DXTabItem>
            <dx:DXTabItem Header="Parameters">
                <Grid>
                    <Grid.RowDefinitions >
                        <RowDefinition Height="Auto"></RowDefinition>
                        <RowDefinition Height="Auto"></RowDefinition>
                        <RowDefinition Height="*"></RowDefinition>
                    </Grid.RowDefinitions>
                    <Grid Background="#00000000" Grid.Row="0" >
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="180" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="35" />
                            <RowDefinition Height="35" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="*" />
                        </Grid.RowDefinitions>
                        <Grid Grid.Row="0" Grid.Column="0">
                            <TextBlock Style="{StaticResource labelTitle}" TextWrapping="Wrap" Text="Laser resolution:"/>
                        </Grid>
                        <Grid Grid.Row="0" Grid.Column="1">
                            <dxe:SpinEdit FontFamily="Times New Roman" FontSize="14" Width="110"  Margin="0,5,0,0" HorizontalContentAlignment="Center" HorizontalAlignment="Left" x:Name="nudLaserValueResolution" Value="3" MinValue="1" MaxValue="6" Increment="1" Mask="D0"/>
                        </Grid>
                        <Grid Grid.Row="1" Grid.Column="0">
                            <TextBlock Style="{StaticResource labelTitle}" TextWrapping="Wrap" Text="Temperature material type:"/>
                        </Grid>
                        <Grid Grid.Row="1" Grid.Column="1">
                            <dxe:ComboBoxEdit FontFamily="Times New Roman" FontSize="14" HorizontalAlignment="Left" HorizontalContentAlignment="Center" Width="110" Margin="0,5,0,0"  x:Name="cboTemperatureType" IsTextEditable="False" Height="30"/>
                        </Grid>
                        <Grid Grid.Row="2" Grid.Column="0" Margin="0,5,0,0">
                            <TextBlock Style="{StaticResource labelTitle}" TextWrapping="Wrap" Text="Laser correction:"/>
                        </Grid>
                        <Grid Grid.Row="2" Grid.Column="1" Margin="0,5,0,0">
                            <dxe:CheckEdit x:Name="chbxUseLaserFormula"/>
                        </Grid>
                    </Grid>
                    <TextBlock Grid.Row="1" FontFamily="Times New Roman" FontSize="14" Margin="0,5,0,5" >Temperature sensor location:</TextBlock>
                    <dxg:GridControl Grid.Row="2"
                        HorizontalAlignment="Left"
                        MaxWidth="250"
                        FontSize="14"
                        x:Name="dgvSensorPos"
                        Margin="0,5,5,5" 
                        FontFamily="Times New Roman" >
                        <dxg:GridColumn HorizontalHeaderContentAlignment="Center" FieldName="Index" ReadOnly="True" Header="Sensor ID" Width="90">
                            <dxg:GridColumn.EditSettings>
                                <dxe:TextEditSettings HorizontalContentAlignment="Center"/>
                            </dxg:GridColumn.EditSettings>
                        </dxg:GridColumn>
                        <dxg:GridColumn HorizontalHeaderContentAlignment="Center" FieldName="Position" Width="*" Header="Position (mm)" >
                            <dxg:GridColumn.EditSettings>
                                <dxe:TextEditSettings HorizontalContentAlignment="Center"/>
                            </dxg:GridColumn.EditSettings>
                        </dxg:GridColumn>
                        <dxg:GridControl.View>
                            <dxg:TableView  x:Name="tableViewCell"
                                ShowGroupPanel="False"
                                AllowEditing="True" 
                                AllowBestFit="True"
                                AllowPerPixelScrolling="True"
                                BestFitMode="VisibleRows"
                                ShowAutoFilterRow="False"
                                ShowFixedTotalSummary="False"
                                ShowCheckBoxSelectorColumn="False"
                                ShowCheckBoxSelectorInGroupRow="False"
                                ShowSelectionRectangle="True"
                                EnableImmediatePosting="True" 
                                ShowCriteriaInAutoFilterRow="False" >       
                                <dxg:TableView.RowStyle>
                                    <Style TargetType="dxg:RowControl">
                                        <Setter Property="Height" Value="35"></Setter>
                                    </Style>
                                </dxg:TableView.RowStyle>
                                
                            </dxg:TableView>

                        </dxg:GridControl.View>
                        
                    </dxg:GridControl>
                </Grid>
                
                
            </dx:DXTabItem>
        </dx:DXTabControl>


        <Border Grid.Row="1" BorderThickness="0,1,0,0">
            <StackPanel Orientation="Horizontal">
                <dx:SimpleButton x:Name="btnSave" Click="btnSave_Click" Content="Save" Margin="5,0,5,5" Glyph="{dx:DXImage SvgImages/Save/SaveAndNew.svg}">
                    <dx:SimpleButton.Background>
                        <ImageBrush />
                    </dx:SimpleButton.Background>
                </dx:SimpleButton>
                <dx:SimpleButton x:Name="btnClose" Click="btnClose_Click" Content="Close" Margin="5,0,5,5" Glyph="{dx:DXImage SvgImages/Outlook Inspired/Close.svg}">
                    <dx:SimpleButton.Background>
                        <ImageBrush />
                    </dx:SimpleButton.Background>
                </dx:SimpleButton>
            </StackPanel>
        </Border>
    </Grid>
</dx:ThemedWindow>